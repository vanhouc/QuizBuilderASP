@model QuizBuilder.Models.User
@{
    ViewBag.Title = "UserHome";
}

<div class="container">
    <div class="jumbotron">
        <h1>Welcome @Model.Username</h1>
        <p>This page will feature everything you need to excel on your quizzes!</p>
    </div>
    <ul class="nav nav-tabs">
        <li class="active"><a href="#Profile" data-toggle="tab">Profile</a></li>
        <li><a href="#Quizzes" data-toggle="tab">Quizzes</a></li>
    </ul>
    <div class="tab-content">
        <div class="tab-pane active" id="Profile">
            @Html.Action("UserDetails", "User")
        </div>
        <div class="tab-pane" id="Quizzes">
            @Html.Action("ListQuiz", "User")
        </div>
    </div>

</div>