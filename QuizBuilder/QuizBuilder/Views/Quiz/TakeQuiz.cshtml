@using QuizBuilder.Models

@model QuizBuilder.Models.QuizAttempt
@{
    ViewBag.Title = "UserQuizzes";
}

<div class="container">
    <div class="jumbotron">
        <h1>QuizBuilder</h1>
        <p>Welcome to QuizBuilder! The best site for taking quizzes on the internet!</p>
    </div>
    <div class="panel panel-default">
        <div class="panel-heading">
            <ul class="pagination">
                <li><a href="#">&laquo;</a></li>
                @for (int i = 0; i < ((Question[])ViewData["QuestionArray"]).Length; i++ )
                {
                    <li>@Html.ActionLink(i.ToString(), "ShowQuestion", new { quizAttemptId = Model.QuizAttemptID, questionId = (((Question[])ViewData["QuestionArray"])[i]).QuestionID })</li>
                }
                <li><a href="#">&raquo;</a></li>
            </ul>
        </div>
        <div class="panel-body">
            @Html.Action("ShowQuestion", new {quizAttemptId = Model.QuizAttemptID, questionId = (int)ViewData["SelectedQuestion"] })
        </div>
    </div>
    @Html.ActionLink("Finish Quiz", "FinishQuiz", new { quizAttemptId = Model.QuizAttemptID }, new { @class = "btn btn-default" })
</div>

